<!--register modal-->
<div id="registerModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Register Account</h4>
            </div>
            <div class="modal-body text-center" align="center">
                <form action="/Home/Register" class="form-horizontal" method="post">
                    <div class="form-group">
                        <div id="grecaptcha" class="g-recaptcha" data-callback="notrobot" data-sitekey="6Leg-SUTAAAAAEw5kbBbICm2-RpzOyYL8-yusyxM"></div>
                    </div>

                    <div class="form-group">
                        @*<input id="validate" name="validate" hidden="" type="submit" class="btn-default" value="Proceed to Register">
                        <button onclick="myFunction()">Click me</button>*@
                        <button input id="validate" type="submit" class="btn btn-success disabled" disabled >Proceed to Register</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>

    </div>
</div>


<script type="text/javascript">

    var notrobot = function () {
        $('#validate').removeClass('disabled');
        $('#validate').removeAttr('disabled');
    }

</script>

<!--logging into account-->
<div id="loginModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Login</h4>
            </div>
            <div class="modal-body">

                <form class="form-horizontal">

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="loginUsername">Username</label>
                        <div class="col-md-4">
                            <input maxlength="200" id="loginUsername" name="loginUsername" type="text" placeholder="Username" class="form-control input-md" required="">
                        </div>
                    </div>

                    <!-- Password input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="registerPassword1">Password</label>
                        <div class="col-md-4">
                            <input maxlength="100" id="loginPassword" name="loginPassword" type="password" placeholder="Password" class="form-control input-md" required="">

                        </div>
                    </div>

                    <!-- Feedback to user -->
                    <h4 class="text-danger" id="loginFeedback"></h4>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button id="btnLogin" name="btnLogin" type="button" class="btn btn-success">Login</button>
            </div>
        </div>

    </div>
</div>
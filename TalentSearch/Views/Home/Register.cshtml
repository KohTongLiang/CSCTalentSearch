@section Scripts {
    @Scripts.Render("~/bundles/script")
}
@{
    ViewBag.Title = "Talent Search Registration";
}
<form class="form-horizontal" id="registerform" name="registerform">
    <h2>Register an account</h2>
    <h4 class="text-center text-info" id="feedback"></h4>
    <p class="text-danger" id="badInput"></p>

    <!-- Text input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="registerEmail">Email</label>
        <div class="col-md-4">
            <input maxlength="200" id="registerEmail" name="registerEmail" type="text" placeholder="example@example.com" class="form-control input-md" required="">
        </div>
    </div>

    <!--User name-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="registerEmail">Username</label>
        <div class="col-md-4">
            <input maxlength="200" id="registerUsername" name="registerUsername" type="text" placeholder="Username" class="form-control input-md" required="">
        </div>
    </div>

    <!-- Password input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="registerPassword1">Password</label>
        <div class="col-md-4">
            <input maxlength="100" id="registerPassword1" name="registerPassword1" type="password" placeholder="Password" class="form-control input-md" required="">
        </div>
    </div>

    <!-- Password input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="registerPassword2">Confirm Password</label>
        <div class="col-md-4">
            <input maxlength="100" id="registerPassword2" name="registerPassword2" type="password" placeholder="Password" class="form-control input-md" required="">
            <span class="help-block">6-100 characters, have capital and small letters, have at least 1 number and special character (e.g. Password1!)</span>
        </div>
    </div>


    <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-4">
            <button id="btnRegister" name="btnRegister" type="button" class="btn btn-success">Register</button>
        </div>
    </div>
    
</form>


@Html.Partial("LoginRegisterModals")